@{
    ViewBag.Title = "Package Search";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    WebGrid packageGrid = new WebGrid(source: ViewBag.packageList, defaultSort: "KEY", canPage: false);//, rowsPerPage: 5);
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/CommonStyle.css">
    <link rel="stylesheet" type="text/css" href="~/Content/PackageStatusStyle.css">
    <meta name="viewport" content="width=device-width" />
    <title>ViewBag.Title</title>
    <style>

        .grid_table thead th:first-child {
            width: 10%;
        }
            .grid_table thead th:first-child + th {
                width: 10%;
            }
                .grid_table thead th:first-child + th + th {
                    width: 10%;
                }
                    .grid_table thead th:first-child + th + th + th {
                        width: 10%;
                    }
                        .grid_table thead th:first-child + th + th + th + th {
                            width: 10%;
                        }
                            .grid_table thead th:first-child + th + th + th + th + th {
                                width: 20%;
                            }
                                .grid_table thead th:first-child + th + th + th + th + th + th {
                                    width: 10%;
                                }
                                    .grid_table thead th:first-child + th + th + th + th + th + th + th {
                                        width: 20%;
                                    }
                                        .grid_table thead th:first-child + th + th + th + th + th + th + th + th {
                                            width: 10%;
                                        }
        .inputCheckbox {
        }

        .checkmark {
            height: 25px;
            width: 25px;
            background-color: #ff0000;
        }


    </style>
</head>
<body>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/ScrollableTablePlugin_1.0_min.js"></script>

    <div class="main">
        <table class="table_rt">
            <tr class="tr_rt">
                <td class="td_rt">
                    @using (Html.BeginForm("PackageSearch", "Admin", FormMethod.Get))
                    {
                        <div class="search">
                            <label>Search Package By Key</label>
                            <input type="text" name="idsearch" value="@ViewBag.idsearch" placeholder="Search" />
                            <input type="submit" value="Search" />
                        </div>
                    }
                </td>
                <td class="td_rt">
                    @using (Html.BeginForm("PackageSearch", "Admin", FormMethod.Get))
                    {
                        <div class="search">
                            <label>Search Package</label>
                            <input type="text" name="search" value="@ViewBag.search" placeholder="Search" />
                            <input type="submit" value="Search" />
                        </div>
                    }
                </td>
            </tr>
        </table>
        @packageGrid.GetHtml(
            tableStyle: "grid_table scroll",
            htmlAttributes: new {@style = "height: 500px; "},
            columns: packageGrid.Columns(
                     packageGrid.Column("KEY", "Key"),
                     packageGrid.Column("SENDER", "Sender"),
                     packageGrid.Column("RECIPIENT", "Recipient"),
                     packageGrid.Column("IDPACKAGE", "Package"),
                     packageGrid.Column("PRICE", "Price"),
                     packageGrid.Column("SADDRES", "Address"),
                     packageGrid.Column("SINDEX", "Index"),
                     packageGrid.Column("ADDRES", "Current Address"),
                     packageGrid.Column("INDEX", "Current Index")
                 )
            )
    </div>
</body>
</html>
